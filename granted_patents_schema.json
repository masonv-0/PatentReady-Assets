{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Granted Patents Result Schema",
  "description": "Returns a list of granted patents with key attributes such as number, title, assignee, relevance score, risk level, and source URL.",
  "type": "object",
  "properties": {
    "granted_patents": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "number": { "type": "string" },
          "title": { "type": "string" },
          "assignee": { "type": "string" },
          "relevance": { "type": "number" },
          "risk_level": {
            "type": "string",
            "enum": ["Low", "Medium", "High"]
          },
          "source": { "type": "string", "format": "uri" }
        },
        "required": ["number", "title", "assignee", "relevance", "risk_level", "source"],
        "additionalProperties": false
      }
    }
  },
  "required": ["granted_patents"],
  "additionalProperties": false
}