{
  "name": "granted_patents",
  "schema": {
    "type": "object",
    "properties": {
      "granted_patents": {
        "type": "array",
        "description": "A list of granted patents.",
        "items": {
          "type": "object",
          "properties": {
            "number": {
              "type": "string",
              "description": "The unique number assigned to the patent."
            },
            "title": {
              "type": "string",
              "description": "The title of the patent."
            },
            "assignee": {
              "type": "string",
              "description": "The entity or person to whom the patent is assigned."
            },
            "relevance": {
              "type": "string",
              "description": "The relevance of the patent to a specific context."
            },
            "risk_level": {
              "type": "string",
              "description": "The assessed risk level associated with the patent."
            },
            "source": {
              "type": "string",
              "description": "The source from which the patent information is derived."
            }
          },
          "required": [
            "number",
            "title",
            "assignee",
            "relevance",
            "risk_level",
            "source"
          ],
          "additionalProperties": false
        }
      }
    },
    "required": [
      "granted_patents"
    ],
    "additionalProperties": false
  },
  "strict": true
}
